<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">



    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:contentPadding="10dp"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Collections"
                    android:id="@+id/textView4"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="@dimen/textsize_16"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/collectionblack"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Today's Collection"
                    android:id="@+id/textView12"
                    android:textSize="@dimen/textsize_14.0"
                    android:gravity="center_vertical"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/textView20"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize_18"/>
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="    Current Month  Bill"
                        android:id="@+id/textView6"
                        android:textSize="@dimen/textsize_14.0"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:id="@+id/textView7"
                        android:textSize="@dimen/textsize_18"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text=" + Last Month Outstanding"
                        android:id="@+id/textView8"
                        android:textSize="@dimen/textsize_14.0"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="10799.00"
                        android:id="@+id/textView9"
                        android:textSize="@dimen/textsize_18"
                        android:textColor="#000000"
                        android:gravity="right"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <View
                    android:id="@+id/verticalSeperator"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#000000"
                  android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="   Total Outstanding"
                        android:id="@+id/textView55"
                        android:textSize="@dimen/textsize_14.0"
                        android:gravity="center_vertical"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:id="@+id/textView56"
                        android:gravity="right"
                        android:textColor="#000000"
                        android:textSize="@dimen/textsize_18"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text=" - This Month Collection"
                        android:id="@+id/textView57"
                        android:textSize="@dimen/textsize_14.0"
                        android:gravity="center_vertical"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:id="@+id/textView58"
                        android:gravity="right"
                        android:textColor="#000000"
                        android:textSize="@dimen/textsize_18"
                        />
                </TableRow>

            </LinearLayout>

            <View
                android:id="@+id/verticalSeperatorss"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Remaining Outstanding"
                    android:id="@+id/textView10"
                    android:textSize="@dimen/textsize_14.0"
                    android:gravity="center_vertical"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/textView11"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize_18"
                    android:textStyle="bold"
                    />
            </TableRow>


        </LinearLayout>

        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:contentPadding="10dp"
        card_view:cardBackgroundColor="#ffffff"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Complaints"
                    android:id="@+id/textView13"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize_16"
                    android:drawableLeft="@drawable/complainblack"
                    android:drawablePadding="10dp"
                    android:textStyle="bold"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Today's Complaint"
                    android:id="@+id/textView21"
                    android:textSize="@dimen/textsize_14.0"
                    android:gravity="center_vertical"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/textView22"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize_18"/>
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Current Month Pending"
                        android:id="@+id/textView14"
                        android:textSize="@dimen/textsize_14.0"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:id="@+id/textView15"
                        android:textSize="@dimen/textsize_18"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Last Month Pending"
                        android:id="@+id/textView16"
                        android:textSize="@dimen/textsize_14.0"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:id="@+id/textView17"
                        android:textSize="@dimen/textsize_18"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"/>
                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/verticalSeperatorHourss"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#000000"
                />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Total Pending Complaints"
                    android:id="@+id/textView18"
                    android:textSize="@dimen/textsize_14.0"
                    android:gravity="center_vertical"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/textView19"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize_18"
                    android:textStyle="bold"
                    />
            </TableRow>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:contentPadding="10dp"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="#ffffff"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Track Users"
                android:id="@+id/textView66"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="@dimen/textsize_16"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>